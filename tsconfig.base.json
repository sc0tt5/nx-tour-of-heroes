{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "dom"],
    "importHelpers": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "useDefineForClassFields": false,
    "paths": {
      "@nx-toh/api": ["libs/api/src/index.ts"],
      "@nx-toh/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@nx-toh/shared/models": ["libs/shared/models/src/index.ts"],
      "@nx-toh/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@nx-toh/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@nx-toh/tour-of-heroes/feature/detail": ["libs/tour-of-heroes/feature/detail/src/index.ts"],
      "@nx-toh/tour-of-heroes/feature/list": ["libs/tour-of-heroes/feature/list/src/index.ts"],
      "@nx-toh/tour-of-heroes/feature/search": ["libs/tour-of-heroes/feature/search/src/index.ts"],
      "@nx-toh/tour-of-heroes/shared/data-access": ["libs/tour-of-heroes/shared/data-access/src/index.ts"],
      "@nx-toh/tour-of-heroes/shared/ui": ["libs/tour-of-heroes/shared/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
